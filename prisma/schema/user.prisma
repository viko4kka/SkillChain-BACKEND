model User {
    id            Int            @id @default(autoincrement())
    linkedinId    String?        @unique
    firstName     String
    lastName      String
    imgUrl        String?
    email         String?
    description   String?
    job           String?
    gitUrl        String?
    linkedinUrl   String?
    userSkills    UserSkill[]
    userLanguages UserLanguage[]
    locationId    Int?
    location      Location?      @relation(fields: [locationId], references: [id])
    projects      Project[]
    linkedinVisits Int @default(0)
    githubVisits   Int @default(0)
}
